  /// Debugging: Print a View
  template<class View>
  void pview(View& v){
    if (v.min() == v.max()) {
      std::cout << v.min() <<" ";
    } else {
      if (v.range()){
	std::cout << "["<<v.min() <<".."<<v.max()<<"] ";
      } else {
	std::cout << "{";
	ViewValues<View> iter(v);
	while(iter()){
	  std::cout << iter.val() <<",";
	  ++iter;
	}
	std::cout << "} ";
      }
    }
  }

