namespace Gecode {

  /*
   * Posting
   *
   */

  forceinline void
  post(Space* home, const MiniModel::LinRel& r, IntConLevel icl) {
    if (home->failed()) return;
    r.post(home,true,icl);
  }
  forceinline void
  post(Space* home, bool r, IntConLevel) {
    if (home->failed()) return;
    if (!r)
      home->fail();
  }

