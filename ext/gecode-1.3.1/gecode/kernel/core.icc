  forceinline void
  ActorDeleteLink::insert_delete(ActorDeleteLink* a, bool fd) {
    if (fd) {
      // Link a after this
      ActorDeleteLink* n = _next_d;
      this->_next_d = a; a->_prev_d = this;
      a->_next_d = n; n->_prev_d = a;
