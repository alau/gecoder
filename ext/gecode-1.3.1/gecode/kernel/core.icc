  template <VarTypeId VTI, PropCond PC, class MED>
  void
  VarTypeProcessor<VTI,PC,MED>::update(VarBase* vb, Propagator**& sub) {
    Variable<VTI,PC,MED>* x = static_cast<Variable<VTI,PC,MED>*>(vb);
    do {
